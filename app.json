{
  "expo": {
    "name": "vibecode",
    "slug": "vibecode",
    "scheme": "vibecode",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Lyriq uses the microphone to record your ideas."
      }
    }
    "android": {
      "edgeToEdgeEnabled": true,
      "permissions": ["RECORD_AUDIO"]
    }
  }
}
